{{ 'component-share.css' | asset_url | stylesheet_tag }}
<share-button class="share-button {{ class }}" id="Share-{{ section.id }}">
    <button class="share-button__button button hidden">
        {% render 'icon-share' %}
        {{ 'general.share.share' | t }}
    </button>
    <details id="Details-{{ section.id }}">
        <summary class="share-button__button">
            {% render 'icon-share' %}
            {{ 'general.share.share' | t }}
        </summary>
        <div id="{{ target }}-share-{{ section.id }}" class="share-button__fallback motion-reduce">
            <div class="form-field">
                <span id="ShareMessage-{{ section.id }}" class="share-button__message hidden" role="status"></span>
                <input type="text"
                    class="field__input"
                    id="url"
                    value="{{ shop.url | append: url }}"
                    placeholder="{{ 'general.share.share_url' | t }}"
                    onclick="this.select();"
                    readonly
                >
                <label class="field__label hiddenLabels" for="url">{{ 'general.share.share_url' | t }}</label>
            </div>
            <button class="share-button__close hidden no-js-hidden">
                {% render 'icon-close' %}
                <span class="visually-hidden">{{ 'general.common.close' | t }}</span>
            </button>
            <button class="share-button__copy no-js-hidden">
                {% render 'icon-clipboard' %}
                <span class="visually-hidden">{{ 'general.share.copy_to_clipboard' | t }}</span>
            </button>
        </div>
    </details>
</share-button>