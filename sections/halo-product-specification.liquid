{%- if section.settings.show_product_specification -%}
    {%- liquid
        assign container = section.settings.container
        assign padding_top = section.settings.padding_top | append: 'px'
        assign padding_bottom = section.settings.padding_bottom | append: 'px'
        assign padding_top_tablet = section.settings.padding_top_tablet | append: 'px'
        assign padding_bottom_tablet = section.settings.padding_bottom_tablet | append: 'px'
        assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
        assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
        assign block_title = section.settings.block_title
        assign block_text = section.settings.block_text
        assign title_align = section.settings.title_align
        assign background_color = section.settings.background_color
        assign title_color = section.settings.title_color
        assign text_color = section.settings.text_color
        assign align = section.settings.align
        assign title_font = section.settings.title_font
        assign title_font_size = section.settings.title_font_size | append: 'px'
        assign title_mobile_font_size = section.settings.title_mobile_font_size | append: 'px'
        assign title_font_weight = section.settings.title_font_weight
        assign title_text_transform = section.settings.title_text_transform
        assign text_font_size = section.settings.text_font_size | append: 'px'
        assign text_font_weight = section.settings.text_font_weight
        assign text_font_style = section.settings.text_font_style
        assign text_text_transform = section.settings.text_text_transform
        assign image = section.settings.image
        assign mobile_image = section.settings.mobile_image
        assign full_width = '100vw'
        assign widths = '375, 550, 750, 1100, 1370w, 1500, 1770, 1780, 1880w, 2000, 3000, 3840'
        if section.settings.image_behavior == 'ambient'
            assign half_width = '60vw'
            assign full_width = '120vw'
            assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
        endif
        assign show_reverse = section.settings.show_reverse
        if section.blocks.size > 0
            assign array_text = section.blocks | where: "type", "text"
            assign array_image = section.blocks | where: "type", "image"
        endif
        assign image_effect = settings.image_effect

        if settings.show_dark_mode
            assign dark_mode = false
            unless background_color == blank or background_color == '#fff' or background_color == '#FFF' or background_color == '#ffffff' or background_color == '#FFFFFF' or background_color == 'rgb(255,255,255)' or background_color == 'rgba(255,255,255,1)' or background_color == 'rgba(0,0,0,0)' or background_color == 'rgb(0,0,0,0)'
                assign dark_mode = true
                assign dark_mode_background_color = section.settings.background_color
            endunless
        endif
    -%}
    <div class="halo-block halo-banner halo-product-specification halo-block-padding{% if show_reverse %} use-reverse{% endif %}{% unless dark_mode %} dark-mode{% endunless %}" id="halo-product-specification-{{ section.id }}"
        style="--padding-top: {{ padding_top }};
            --padding-bottom: {{ padding_bottom }};
            --padding-top-tablet: {{ padding_top_tablet }};
            --padding-bottom-tablet: {{ padding_bottom_tablet }};
            --padding-top-mobile: {{ padding_top_mobile }};
            --padding-bottom-mobile: {{ padding_bottom_mobile }};
            {% if title_font == 'font_1' %}
                --title-font: var(--font-1-family);
            {% elsif title_font == 'font_2' %}
                --title-font: var(--font-2-family);
            {% elsif title_font == 'font_3' %}
                --title-font: var(--font-3-family);
            {% endif %}
            --title-font-size: {{ title_font_size }};
            --title-tablet-font-size: {{ title_mobile_font_size }};
            --title-mobile-font-size: {{ title_mobile_font_size }};
            --title-font-weight: {{ title_font_weight }};
            --title-text-transform: {{ title_text_transform }};
            --text-font-size: {{ text_font_size }};
            --text-font-weight: {{ text_font_weight }};
            --text-font-style: {{ text_font_style }};
            --text-text-transform: {{ text_text_transform }};
            --title-color: {{ title_color }};
            --text-color: {{ text_color }};
            --bg-color: {{ background_color | default: settings.colors_bg }};
            {% if settings.show_dark_mode %}
                --dark-mode-title-color: {{ title_color }};
                --dark-mode-text-color: {{ text_color }};
            {% endif %}
            {% if dark_mode %}
                --dark-mode-bg-color: {{ dark_mode_background_color }};
            {% endif %}"
    >
        {%- if block_title != blank or block_text != blank -%}
            <div class="container container-{{ container }}">
                <div class="halo-block-header">
                    <h3 class="title text-{{ title_align }}">
                        <span class="text">
                            {{ block_title | escape }}
                        </span>
                    </h3>
                    {%- if block_text != blank -%}
                        <span class="desc text-{{ title_align }}">
                            {{ block_text }}
                        </span>
                    {%- endif -%}
                </div>
            </div>
        {%- endif -%}
        <div class="halo-block-banner{% if array_image.size > 0 %} show-margin-image{% endif %}">
            <div class="img-box img-box--mobile">
                <loading-banner class="loading-banner">
                    {%- if image != blank -%}
                        <{% if link != blank %}a{% else %}div{% endif %} class="image image-adapt{% if image != blank and section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: {% unless image.presentation.focal_point == '50.0% 50.0%' %}{{ 1 | divided_by: image.aspect_ratio | times: 100 | divided_by: 1.1 }}%{% else %}{{ 1 | divided_by: image.aspect_ratio | times: 100 }}%{% endunless %}">
                            {%- assign image_alt = image.alt | default: shop.name | escape -%}
                            {{ image | image_url: width: 3840 | image_tag:
                                loading: 'lazy',
                                width: image.width,
                                height: image_height,
                                class: image_class,
                                sizes: full_width,
                                widths: widths,
                                alt: image_alt
                            }}
                        </{% if link != blank %}a{% else %}div{% endif %}>
                    {%- else -%}
                        <{% if link != blank %}a{% else %}div{% endif %} class="image" {% if link != blank %} href="{{ link }}"{% endif %}>
                            {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                            {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}   
                        </{% if link != blank %}a{% else %}div{% endif %}>
                    {%- endif -%}
                    {%- if mobile_image != blank -%}
                        <{% if link != blank %}a{% else %}div{% endif %} class="image image-mobile image-adapt{% if mobile_image != blank and section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: {{ 1 | divided_by: mobile_image.aspect_ratio | times: 100 | append: '%' }}">
                            {%- assign image_alt = mobile_image.alt | default: shop.name | escape -%}
                            {{ mobile_image | image_url: width: 3840 | image_tag:
                                loading: 'lazy',
                                width: mobile_image.width,
                                height: image_height,
                                class: image_class,
                                sizes: full_width,
                                widths: widths,
                                alt: image_alt
                            }}
                        </{% if link != blank %}a{% else %}div{% endif %}>
                    {%- else -%}
                        {%- if image != blank -%}
                            <{% if link != blank %}a{% else %}div{% endif %} class="image image-mobile image-adapt{% if image != blank and section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: {% unless image.presentation.focal_point == '50.0% 50.0%' %}100%{% else %}{{ 1 | divided_by: image.aspect_ratio | times: 100 }}%{% endunless %}">
                                {%- assign image_alt = image.alt | default: shop.name | escape -%}
                                {{ image | image_url: width: 3840 | image_tag:
                                    loading: 'lazy',
                                    width: image.width,
                                    height: image_height,
                                    class: image_class,
                                    sizes: full_width,
                                    widths: widths,
                                    alt: image_alt
                                }}
                            </{% if link != blank %}a{% else %}div{% endif %}>
                        {%- else -%}
                            <{% if link != blank %}a{% else %}div{% endif %} class="image image-mobile" {% if link != blank %} href="{{ link }}"{% endif %}>
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                            </{% if link != blank %}a{% else %}div{% endif %}>
                        {%- endif -%}
                    {%- endif -%}
                </loading-banner>
                {%- if array_text.size > 0 -%}
                    {%- for block in section.blocks -%}
                        {%- case block.type -%}
                        {%- when 'text' -%}
                            {%- liquid
                                assign heading = block.settings.heading
                                assign product_type = block.settings.product_type
                                if product_type == 'text'
                                    assign text = block.settings.text
                                elsif product_type == 'info' or product_type == 'metafield'
                                    assign show_section = false
                                    assign show_product_specification = section.settings.show_product_specification
                                    assign product = all_products[block.settings.featured_product]
                                    if product != blank and show_product_specification
                                        assign show_section = true
                                    endif
                                endif
                                assign link_title = block.settings.link_title
                                if link_title
                                    assign button_style = block.settings.button_style
                                    assign transparent_button = block.settings.transparent_button
                                    assign button_width = block.settings.button_width
                                endif
                                assign link = block.settings.link
                            -%}
                            <div class="halo-block-content content-box content-box--flexible content-box--absolute content-box--full content-box--{{ container }} product-{{ product_type }}{% unless show_reverse %} content-box--left text-left{% else %} content-box--right text-right{% endunless %}">
                                <div class="item-content text-{{ align }}">
                                    {%- if heading != blank -%}
                                        <h3 class="banner-title title typography__mobile typography__tablet typography__desktop">{{ heading }}</h3>
                                    {%- endif -%}
                                    <div class="banner-info product_type-{{ product_type }}">
                                        {%- if product_type == 'text' -%}
                                            {%- if text != blank -%}
                                                <span class="desc">{{ text }}</span>
                                            {%- endif -%}
                                        {%- elsif product_type == 'info' -%}
                                            {%- if show_section -%}
                                                <div class="halo-text-format description-block-item text-{{ align }}">
                                                    {{ product.description }}
                                                </div>
                                            {%- endif -%}
                                        {%- else -%}
                                            {%- if variantCount > 0 and product.has_only_default_variant != true -%}
                                                {%- assign propertySize = current_variant.metafields.c_f.property.value | size -%}
                                                {%- if propertySize > 0 -%}
                                                    <div class="productView-info productView-propertyInfo" id="product-property-{{ section.id }}-{{ product.id }}">
                                                        <div class="productView-info-table">
                                                            {%- for property in current_variant.metafields.c_f.property.value -%}
                                                                <div class="productView-info-item">
                                                                    <span class="productView-info-name">{{ property.first | capitalize }}</span>
                                                                    <span class="productView-info-value">{{ property.last | capitalize }}</span>
                                                                </div>
                                                            {%- endfor -%}
                                                        </div>
                                                    </div>
                                                {%- else -%}
                                                    {%- assign propertySize = product.metafields.c_f.property.value | size -%}
                                                    {%- if propertySize > 0 -%}
                                                        <div class="productView-info productView-propertyInfo" id="product-property-{{ section.id }}-{{ product.id }}">
                                                            <div class="productView-info-table">
                                                                {%- for property in product.metafields.c_f.property.value -%}
                                                                    <div class="productView-info-item">
                                                                        <span class="productView-info-name">{{ property.first | capitalize }}</span>
                                                                        <span class="productView-info-value">{{ property.last | capitalize }}</span>
                                                                    </div>
                                                                {%- endfor -%}
                                                            </div>
                                                        </div>
                                                    {%- endif -%}
                                                {%- endif -%}
                                            {%- else -%}
                                                {%- assign propertySize = product.metafields.c_f.property.value | size -%}
                                                {%- if propertySize > 0 -%}
                                                    <div class="productView-info productView-propertyInfo" id="product-property-{{ section.id }}-{{ product.id }}">
                                                        <div class="productView-info-table">
                                                            {%- for property in product.metafields.c_f.property.value -%}
                                                                <div class="productView-info-item">
                                                                    <span class="productView-info-name">{{ property.first | capitalize }}</span>
                                                                    <span class="productView-info-value">{{ property.last | capitalize }}</span>
                                                                </div>
                                                            {%- endfor -%}
                                                        </div>
                                                    </div>
                                                {%- endif -%}
                                            {%- endif -%}
                                        {%- endif -%}
                                    </div>
                                    {%- unless product_type == 'metafield' -%}
                                        {%- if link_title != blank -%}
                                            <div class="content-bottom">
                                                <{% if link != blank %}a{% else %}div{% endif %} class="{% if button_style == 'link' %}link link-underline text-underline{% else %}banner-button button button-{{ button_style }}{% if transparent_button %} button--transparent{% endif %}{% endif %}"{% if link == blank %} role="link" aria-disabled="true"{% else %} href="{{ link }}"{% endif %}
                                                    {% if button_style != 'link' %}
                                                        style="max-width: {{ button_width | append: 'px' }};"
                                                    {% endif %}
                                                >
                                                    <span class="text">{{ link_title | escape }}</span>
                                                </{% if link != blank %}a{% else %}div{% endif %}>
                                            </div>
                                        {%- endif -%}
                                    {%- endunless -%}
                                </div>
                            </div>
                        {%- endcase -%}
                    {%- endfor -%}
                {%- endif -%}
            </div>
            {%- if array_image.size > 0 -%}
                <div class="item-image">
                    {%- for block in section.blocks -%}
                        {%- case block.type -%}
                        {%- when 'image' -%}
                            {%- liquid
                                assign image_block = block.settings.image_block
                                assign link_block = block.settings.link_block
                            -%}
                            <div class="img-box">
                                <loading-banner class="loading-banner">
                                    {%- if image_block != blank -%}
                                        <{% if link_block != blank %}a{% else %}div{% endif %} class="image image-adapt image-{{ image_effect }}" {% if link_block != blank %} href="{{ link_block }}"{% else %} rel="fixed-image" data-fancybox="fixed-image"{% endif %} style="padding-top: {% unless image.presentation.focal_point == '50.0% 50.0%' %}100%{% else %}{{ 1 | divided_by: image.aspect_ratio | times: 100 }}%{% endunless %}">
                                            <img srcset="{%- if image_block.width < 320 -%}{{ image_block | image_url: width: image_block.width }} 320w,{%- endif -%}
                                                {%- if image_block.width >= 320 -%}{{ image_block | image_url: width: 375 }} 375w,{%- endif -%}
                                                {%- if image_block.width >= 740 -%}{{ image_block | image_url: width: 740 }} 740w,{%- endif -%} 
                                                {%- if image_block.width >= 750 -%}{{ image_block | image_url: width: 750 }} 750w,{%- endif -%}
                                                {%- if image_block.width >= 1100 -%}{{ image_block | image_url: width: 1100 }} 1100w,{%- endif -%}
                                                {%- if image_block.width >= 1370 -%}{{ image_block | image_url: width: 1370 }} 1370w,{%- endif -%}
                                                {%- if image_block.width >= 1500 -%}{{ image_block | image_url: width: 1500 }} 1500w,{%- endif -%}
                                                {%- if image_block.width >= 1770 -%}{{ image_block | image_url: width: 1770 }} 1770w,{%- endif -%}
                                                {%- if image_block.width >= 1780 -%}{{ image_block | image_url: width: 1780 }} 1780w,{%- endif -%}
                                                {%- if image_block.width >= 1880 -%}{{ image_block | image_url: width: 1880 }} 1880w,{%- endif -%}
                                                {%- if image_block.width >= 2000 -%}{{ image_block | image_url: width: 2000 }} 2000w,{%- endif -%}
                                                {%- if image_block.width >= 2800 -%}{{ image_block | image_url: width: 2800 }} 2800w{%- endif -%}"
                                                alt="{{ image_block.alt | default: shop.name | escape }}" width="{{ image_block.width }}" height="{{ image_block.width | divided_by: image_block.aspect_ratio | round }}" 
                                                {% unless image_block.presentation.focal_point == '50.0% 50.0%' %}style="object-position: {{ image_block.presentation.focal_point }}"{% endunless %}
                                                loading="lazy"
                                            >
                                            {%- if image_effect == 'liquid' -%}
                                                <span class="hover"></span>
                                            {%- endif -%}
                                        </{% if link_block != blank %}a{% else %}div{% endif %}>
                                    {%- else -%}
                                        <{% if link_block != blank %}a{% else %}div{% endif %} class="image"{% if link_block != blank %} href="{{ link_block }}"{% endif %}>
                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                        </{% if link_block != blank %}a{% else %}div{% endif %}>
                                    {%- endif -%}
                                </loading-banner>
                            </div>
                        {%- endcase -%}
                    {%- endfor -%}
                </div>
            {%- endif -%}
        </div>
    </div>
{%- endif -%}
