{% render 'footer-style',
    footer_layout: '7'
%}

{%- liquid
    assign show_footer_middle = section.settings.show_footer_middle
    if show_footer_middle and section.blocks.size > 0
        assign footer_middle_container = section.settings.footer_middle_container
        assign show_footer_middle_bg_img = section.settings.show_footer_middle_bg_img
        assign footer_link = section.blocks | where: "type", "link_list"
        assign footer_text = section.blocks | where: "type", "text"
        assign footer_text_custom = section.blocks | where: "type", "text_custom"
        assign bottom_image_item = section.blocks | where: "type", "image"
        assign text_align = section.settings.footer_middle_text_align
        assign footer_midle_class = "footer-block__middle"
    endif
    assign show_footer_slide = section.settings.show_footer_slide
    if show_footer_slide
        assign footer_slide_container = section.settings.footer_slide_container
        assign footer_bottom_heading = section.settings.footer_bottom_heading
        assign btn_text_bottom = section.settings.btn_text_bottom
        assign btn_link_bottom = section.settings.btn_link_bottom
        assign btn_option = section.settings.btn_option
    endif
    assign footer_bottom_block = section.blocks | where: 'type', 'footer_bottom' | first
-%}

<footer class="footer footer-7">
    {%- if show_footer_middle and section.blocks.size > 0 -%}
        <div class="footer__content-middle{% if show_footer_middle_bg_img %} footer__content-bg{% endif %}">
            <div class="container container-{{ footer_middle_container }}">
                <div class="{{ footer_midle_class }}">
                    {%- if footer_text.size -%}
                        {% render 'footer-texts',
                            footer_text: footer_text,
                            text_align: text_align
                        %}
                    {%- endif -%}

                    {%- if footer_link.size > 0 -%}
                        {% render 'footer-links',
                            footer_link: footer_link,
                            text_align: text_align
                        %}
                    {%- endif -%}

                    {%- if footer_text_custom.size > 0-%}
                        {% render 'footer-texts-1',
                            footer_text_custom: footer_text_custom,
                            text_align: text_align
                        %}
                    {%- endif -%}
                </div>
            </div>
        </div>
    {%- endif -%}
    {%- if show_footer_slide -%}
        <div class="footer__content-slide-bottom footer__content-bottom">
            <div class="container container-{{ footer_slide_container }}">
                {%- if bottom_image_item.size > 0 -%}
                    {%- liquid
                        assign column = section.settings.block_show
                        assign dots = section.settings.block_dots
                        assign arrows = section.settings.block_arrows
                        assign image_border_radius = settings.image_border_radius
                        assign image_effect = settings.image_effect
                    -%}
                    <div class="wrapper-footer-block">
                        <div class="footer-block__left text-left">
                            <h4 class="title">
                                {{ footer_bottom_heading }}
                            </h4>
                            {%- if btn_text_bottom != blank -%}
                                <{% if btn_link_bottom != blank %}a{% else %}div{% endif %} {% if btn_link_bottom != blank %}href="{{ btn_link_bottom }}"{% endif %} class="footer-button button button-{{ btn_option }}">
                                    <span class="text">
                                        {{ btn_text_bottom | escape }}
                                    </span>
                                </{% if btn_link_bottom != blank %}a{% else %}div{% endif %}>
                            {%- endif -%}
                        </div>
                        <div class="halo-block halo-banner footer-block__right text-right" data-footer-banner-block data-loader-script="{{ 'halo.slide-footer-banner.js' | asset_url }}">
                            <div class="halo-row column-{{ bottom_image_item.size }} disable-scrollbar halo-row-carousel"data-item-to-show="{{ column }}" data-item-dots="{{ dots }}" data-item-arrows="{{ arrows }}">
                                {%- for block in bottom_image_item -%}
                                    {%- liquid
                                        assign image = block.settings.image_bottom_item
                                        assign link = block.settings.link_image
                                    -%}
                                    <div class="halo-row-item item item-{{ block.id }}">
                                        <div class="banner-item image-{{ image_effect }}">
                                            <div class="img-box">
                                                {%- if image != blank -%}
                                                    <{% if link != blank %}a{% else %}div{% endif %} class="image image-adapt image-border-{{ image_border_radius }}" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: {{ 1 | divided_by: image.aspect_ratio | times: 100 | append: '%' }}">
                                                        <img srcset="{{ image | img_url: '1920x' }} 1x, {{ image | img_url: '1920x', scale: 2 }} 2x" src="{{ image | img_url: '1920x', crop: 'center' }}" alt="{{ image.alt | default: shop.name | escape }}" loading="lazy">
                                                    </{% if link != blank %}a{% else %}div{% endif %}>
                                                {%- else -%}
                                                    <div class="image">
                                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}   
                                                    </div>
                                                {%- endif -%}
                                            </div>
                                        </div>
                                    </div>
                                {%- endfor -%}
                            </div>
                        </div>
                    </div>
                {%- endif -%}
            </div>
        </div>
    {%- endif -%}
    {% if footer_bottom_block != null or footer_bottom_block != blank %}
        {% render 'footer-bottom',
            block: footer_bottom_block,
            footer_layout: '7',
            text_center: true
        %}
    {%- endif -%}
</footer>

