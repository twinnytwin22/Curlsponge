{%- if section.settings.show_fullwidth_banner -%}
    {%- liquid
        assign layout_style = section.settings.layout_style
        assign container = section.settings.container
        assign padding_top = section.settings.padding_top | append: 'px'
        assign padding_bottom = section.settings.padding_bottom | append: 'px'
        assign padding_top_tablet = section.settings.padding_top_tablet | append: 'px'
        assign padding_bottom_tablet = section.settings.padding_bottom_tablet | append: 'px'
        assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
        assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
        assign padding_top_section = section.settings.padding_top_section | append: 'px'
        assign image = section.settings.image
        assign mobile_image = section.settings.mobile_image
        assign full_width = '100vw'
        assign widths = '375, 550, 750, 1100, 1370w, 1500, 1770, 1780, 1880w, 2000, 3000, 3840'
        if section.settings.image_behavior == 'ambient'
            assign half_width = '60vw'
            assign full_width = '120vw'
            assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
        endif
        if section.blocks.size > 0
            assign array_title = section.blocks | where: "type", "title"
            assign array_text = section.blocks | where: "type", "text"
            assign array_button = section.blocks | where: "type", "button"
            assign array_countdown = section.blocks | where: "type", "countdown"
            assign array_marquee = section.blocks | where: "type", "marquee"
            assign position = section.settings.position
            assign align = section.settings.align
            assign background_color = section.settings.background_color
            assign title_color = section.settings.title_color
            assign text_color = section.settings.text_color
            assign transparent_button = section.settings.transparent_button
            assign title_font = section.settings.title_font
            assign title_font_size = section.settings.title_font_size | append: 'px'
            assign title_tablet_font_size = section.settings.title_tablet_font_size | append: 'px'
            assign title_mobile_font_size = section.settings.title_mobile_font_size | append: 'px'
            assign title_font_weight = section.settings.title_font_weight
            assign title_text_transform = section.settings.title_text_transform
            assign text_font_size = section.settings.text_font_size | append: 'px'
            assign text_font_weight = section.settings.text_font_weight
            assign text_text_transform = section.settings.text_text_transform
            if array_countdown.size > 0
                assign countdown_background_color = section.settings.countdown_background_color
                assign countdown_text_color = section.settings.countdown_text_color
                assign countdown_font = section.settings.countdown_font
                assign countdown_font_size = section.settings.countdown_font_size | append: 'px'
                assign countdown_font_weight = section.settings.countdown_font_weight
                assign countdown_text_transform = section.settings.countdown_text_transform
            endif
            if array_marquee.size > 0
                assign marquee_position = section.settings.marquee_position
                assign marquee_background_color = section.settings.marquee_background_color
                assign marquee_text_color = section.settings.marquee_text_color
                assign marquee_font = section.settings.marquee_font
                assign marquee_font_size = section.settings.marquee_font_size | append: 'px'
                assign marquee_mobile_font_size = section.settings.marquee_mobile_font_size | append: 'px'
                assign marquee_font_weight = section.settings.marquee_font_weight
                assign marquee_font_style = section.settings.marquee_font_style
                assign marquee_text_transform = section.settings.marquee_text_transform
            endif
        endif

        assign image_border_radius = settings.image_border_radius
    -%}
    <div class="halo-block halo-banner fullwidth-banner fullwidth-banner-2 style-{{ layout_style }} halo-block-padding" id="halo-fullwidth-banner-{{ section.id }}"
        style="--padding-top: {{ padding_top }};
            --padding-bottom: {{ padding_bottom }};
            --padding-top-tablet: {{ padding_top_tablet }};
            --padding-bottom-tablet: {{ padding_bottom_tablet }};
            --padding-top-mobile: {{ padding_top_mobile }};
            --padding-bottom-mobile: {{ padding_bottom_mobile }};"
    >
        <div class="container container-{{ container }}">
            <div class="halo-block-content" style="--spacing-top: {{ padding_top_section }};">
                <div class="halo-banner-wrapper">
                    <div class="item item-{{ section.id }}"
                        style="{% if title_font == 'font_1' %}
                            --title-font: var(--font-1-family);
                        {% elsif title_font == 'font_2' %}
                            --title-font: var(--font-2-family);
                        {% elsif title_font == 'font_3' %}
                            --title-font: var(--font-3-family);
                        {% endif %}
                        --title-font-size: {{ title_font_size }};
                        --title-tablet-font-size: {{ title_tablet_font_size }};
                        --title-mobile-font-size: {{ title_mobile_font_size }};
                        --title-font-weight: {{ title_font_weight }};
                        --title-text-transform: {{ title_text_transform }};
                        --title-color: {{ title_color }};
                        --text-font-size: {{ text_font_size }};
                        --text-font-weight: {{ text_font_weight }};
                        --text-text-transform: {{ text_text_transform }};
                        --text-color: {{ text_color }};"
                    >
                        <div class="banner-item">
                            <div class="img-box img-box--mobile{% if container != 'full' %} image-border-{{ image_border_radius }}{% endif %}">
                                <loading-banner class="loading-banner">
                                    {%- if image != blank -%}
                                        <{% if link != blank %}a{% else %}div{% endif %} class="image image-adapt{% if image != blank and section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}" {% if link != blank %} href="{{ link }}"{% endif %} style="
                                            padding-top: {% unless image.presentation.focal_point == '50.0% 50.0%' %}{{ 1 | divided_by: image.aspect_ratio | times: 100 | divided_by: 1.1 }}%{% else %}{{ 1 | divided_by: image.aspect_ratio | times: 100 }}%{% endunless %}"
                                        >
                                            {%- assign image_alt = image.alt | default: shop.name | escape -%}
                                            {{ image | image_url: width: 3840 | image_tag:
                                                loading: 'lazy',
                                                width: image.width,
                                                height: image_height,
                                                class: image_class,
                                                sizes: full_width,
                                                widths: widths,
                                                alt: image_alt
                                            }}
                                        </{% if link != blank %}a{% else %}div{% endif %}>
                                    {%- else -%}
                                        <{% if link != blank %}a{% else %}div{% endif %} class="image" {% if link != blank %} href="{{ link }}"{% endif %}>
                                            {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                                            {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}   
                                        </{% if link != blank %}a{% else %}div{% endif %}>
                                    {%- endif -%}
                                    {%- if mobile_image != blank -%}
                                        <{% if link != blank %}a{% else %}div{% endif %} class="image image-mobile image-adapt{% if mobile_image != blank and section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: {{ 1 | divided_by: mobile_image.aspect_ratio | times: 100 | append: '%' }}">
                                            {%- assign image_alt = mobile_image.alt | default: shop.name | escape -%}
                                            {{ mobile_image | image_url: width: 3840 | image_tag:
                                                loading: 'lazy',
                                                width: mobile_image.width,
                                                height: image_height,
                                                class: image_class,
                                                sizes: full_width,
                                                widths: widths,
                                                alt: image_alt
                                            }}
                                        </{% if link != blank %}a{% else %}div{% endif %}>
                                    {%- else -%}
                                        {%- if image != blank -%}
                                            <{% if link != blank %}a{% else %}div{% endif %} class="image image-mobile image-adapt{% if image != blank and section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: {% unless image.presentation.focal_point == '50.0% 50.0%' %}100%{% else %}{{ 1 | divided_by: image.aspect_ratio | times: 100 }}%{% endunless %}">
                                                {%- assign image_alt = image.alt | default: shop.name | escape -%}
                                                {{ image | image_url: width: 3840 | image_tag:
                                                    loading: 'lazy',
                                                    width: image.width,
                                                    height: image_height,
                                                    class: image_class,
                                                    sizes: full_width,
                                                    widths: widths,
                                                    alt: image_alt
                                                }}
                                            </{% if link != blank %}a{% else %}div{% endif %}>
                                        {%- else -%}
                                            <{% if link != blank %}a{% else %}div{% endif %} class="image image-mobile" {% if link != blank %} href="{{ link }}"{% endif %}>
                                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                            </{% if link != blank %}a{% else %}div{% endif %}>
                                        {%- endif -%}
                                    {%- endif -%}
                                </loading-banner>
                            </div>
                            {%- if array_title.size > 0 or array_text.size > 0 or array_button.size > 0 or array_countdown.size > 0 -%}
                                <div class="content-box content-box--flexible content-box--absolute content-box--full content-box--1570 content-box--{{ position }} text-{{ align }}{% if background_color != 'rgba(0,0,0,0)' and background_color != blank %} content-box--bg{% endif %}"
                                    style="--bg-color: {{ background_color }};"
                                >
                                    {%- for block in section.blocks -%}
                                        {%- case block.type -%}
                                        {%- when 'title' -%}
                                            {%- if block.settings.title != blank -%}
                                                {%- liquid
                                                    assign padding_top = block.settings.padding_top
                                                    assign padding_bottom = block.settings.padding_bottom
                                                -%}
                                                <h4 class="banner-title banner-block--flexible typography__mobile typography__tablet typography__desktop"
                                                    style="--padding-top: {{ padding_top | append: 'px' }};
                                                    --padding-bottom: {{ padding_bottom | append: 'px' }};
                                                    --padding-top-mobile: {{ padding_top | times: 0.5 | round: 0 | append: 'px' }};
                                                    --padding-bottom-mobile: {{ padding_bottom | times: 0.5 | round: 0 | append: 'px' }};
                                                    --padding-top-tablet: {{ padding_top | times: 0.75 | round: 0 | append: 'px' }};
                                                    --padding-bottom-tablet: {{ padding_bottom | times: 0.75 | round: 0 | append: 'px' }};"
                                                >
                                                    {{ block.settings.title | escape }}
                                                </h4>
                                            {%- endif -%}
                                        {%- when 'text' -%}
                                            {%- if block.settings.text != blank -%}
                                                {%- liquid
                                                    assign padding_top = block.settings.padding_top
                                                    assign padding_bottom = block.settings.padding_bottom
                                                -%}
                                                <span class="banner-text banner-block--flexible typography__text"
                                                    style="--padding-top: {{ padding_top | append: 'px' }};
                                                    --padding-bottom: {{ padding_bottom | append: 'px' }};
                                                    --padding-top-mobile: {{ padding_top | times: 0.5 | round: 0 | append: 'px' }};
                                                    --padding-bottom-mobile: {{ padding_bottom | times: 0.5 | round: 0 | append: 'px' }};
                                                    --padding-top-tablet: {{ padding_top | times: 0.75 | round: 0 | append: 'px' }};
                                                    --padding-bottom-tablet: {{ padding_bottom | times: 0.75 | round: 0 | append: 'px' }};"
                                                >
                                                    {{ block.settings.text }}
                                                </span>
                                            {%- endif -%}
                                        {%- when 'rich_text' -%}
                                            {%- if block.settings.rich_text != blank -%}
                                                {%- liquid
                                                    assign padding_top = block.settings.padding_top
                                                    assign padding_bottom = block.settings.padding_bottom
                                                -%}
                                                <span class="banner-rich-text banner-text banner-block--flexible typography__text block-rich-text u-link"
                                                    style="--padding-top: {{ padding_top | append: 'px' }};
                                                    --padding-bottom: {{ padding_bottom | append: 'px' }};
                                                    --padding-top-mobile: {{ padding_top | times: 0.5 | round: 0 | append: 'px' }};
                                                    --padding-bottom-mobile: {{ padding_bottom | times: 0.5 | round: 0 | append: 'px' }};
                                                    --padding-top-tablet: {{ padding_top | times: 0.75 | round: 0 | append: 'px' }};
                                                    --padding-bottom-tablet: {{ padding_bottom | times: 0.75 | round: 0 | append: 'px' }};"
                                                >
                                                    {{ block.settings.rich_text }}
                                                </span>
                                            {%- endif -%}
                                        {%- when 'countdown' -%}
                                            {%- if block.settings.countdown_time != blank -%}
                                                {%- liquid
                                                    assign padding_top = block.settings.padding_top
                                                    assign padding_bottom = block.settings.padding_bottom
                                                -%}
                                                <div class="banner-countdown banner-block--flexible"
                                                    style="--padding-top: {{ padding_top | append: 'px' }};
                                                    --padding-bottom: {{ padding_bottom | append: 'px' }};
                                                    --padding-top-mobile: {{ padding_top | times: 0.5 | round: 0 | append: 'px' }};
                                                    --padding-bottom-mobile: {{ padding_bottom | times: 0.5 | round: 0 | append: 'px' }};
                                                    --padding-top-tablet: {{ padding_top | times: 0.75 | round: 0 | append: 'px' }};
                                                    --padding-bottom-tablet: {{ padding_bottom | times: 0.75 | round: 0 | append: 'px' }};
                                                    --countdown-color-foreground: {{ countdown_text_color }};
                                                    --countdown-color-background: {{ countdown_background_color }};
                                                    {% if countdown_font == 'font_1' %}
                                                        --countdown-font: var(--font-1-family);
                                                    {% elsif countdown_font == 'font_2' %}
                                                        --countdown-font: var(--font-2-family);
                                                    {% elsif countdown_font == 'font_3' %}
                                                        --countdown-font: var(--font-3-family);
                                                    {% endif %}
                                                    --countdown-font-size: {{ countdown_font_size }};
                                                    --countdown-font-weight: {{ countdown_font_weight }};
                                                    --countdown-text-transform: {{ countdown_text_transform }};"
                                                >
                                                    <count-down class="banner-countdown--wrapper countdown-{{ section.id }} clearfix" data-countdown="{{ block.settings.countdown_time }}" data-type="banner">
                                                        <div class="banner-countdown--countdown"></div>
                                                    </count-down>
                                                </div>
                                            {%- endif -%}
                                        {%- when 'button' -%}
                                            {%- liquid
                                                assign btn = block.settings.btn
                                                assign btn_text = block.settings.btn_text
                                                assign link = block.settings.link
                                            -%}
                                            {%- if btn_text != blank -%}
                                                <{% if link != blank %}a{% else %}div{% endif %} {% if link != blank %} href="{{ link }}"{% endif %} class="banner-button button button-{{ btn }}{% if transparent_button %} button--transparent{% endif %}">
                                                    <span class="text">
                                                        {{ btn_text | escape }}
                                                    </span>
                                                </{% if link != blank %}a{% else %}div{% endif %}>
                                            {%- endif -%}
                                        {%- endcase -%}
                                    {%- endfor -%}
                                </div>
                            {%- endif -%}
                            {%- if array_marquee.size > 0 %}
                                <div class="marquee-box marquee-box--{{ marquee_position }}"
                                    style="--marquee-background-color: {{ marquee_background_color }};
                                    --marquee-text-color: {{ marquee_text_color }};
                                    {% if marquee_font == 'font_1' %}
                                        --marquee-font: var(--font-1-family);
                                    {% elsif marquee_font == 'font_2' %}
                                        --marquee-font: var(--font-2-family);
                                    {% elsif marquee_font == 'font_3' %}
                                        --marquee-font: var(--font-3-family);
                                    {% endif %}
                                    --marquee-font-size: {{ marquee_font_size }};
                                    --marquee-mobile-font-size: {{ marquee_mobile_font_size }};
                                    --marquee-font-weight: {{ marquee_font_weight }};
                                    --marquee-font-style: {{ marquee_font_style }};
                                    --marquee-text-transform: {{ marquee_text_transform }};"
                                >
                                    <div class="banner-marquee">
                                        {% case array_marquee.size %}
                                        {% when 1 %}
                                            {%- for i in (1..10) -%}
                                                {%- liquid
                                                    assign text = array_marquee[0].settings.text
                                                    assign link = array_marquee[0].settings.link
                                                -%}
                                                {%- if text != blank -%}
                                                    <{% if link != blank %}a{% else %}span{% endif %} class="banner-marquee__item{% if link != blank %} link{% endif %}"{% if link != blank %} href="{{ link }}"{% endif %}>
                                                        {{ text }}
                                                    </{% if link != blank %}a{% else %}span{% endif %}>
                                                {%- endif -%}
                                            {%- endfor -%}
                                        {% when 2 %}
                                            {%- for i in (1..10) -%}
                                                {%- liquid
                                                    assign number = forloop.index | modulo : 2
                                                    if number == 0
                                                        assign text = array_marquee[1].settings.text
                                                        assign link = array_marquee[1].settings.link
                                                    else
                                                        assign text = array_marquee[0].settings.text
                                                        assign link = array_marquee[0].settings.link
                                                    endif
                                                -%}
                                                {%- if text != blank -%}
                                                    <{% if link != blank %}a{% else %}span{% endif %} class="banner-marquee__item{% if link != blank %} link{% endif %}"{% if link != blank %} href="{{ link }}"{% endif %}>
                                                        {{ text }}
                                                    </{% if link != blank %}a{% else %}span{% endif %}>
                                                {%- endif -%}
                                            {%- endfor -%}
                                        {% when 3 %}
                                            {%- for i in (1..10) -%}
                                                {%- liquid
                                                    assign number = forloop.index | modulo : 3
                                                    if number == 0
                                                        assign text = array_marquee[2].settings.text
                                                        assign link = array_marquee[2].settings.link
                                                    elsif number == 1
                                                        assign text = array_marquee[0].settings.text
                                                        assign link = array_marquee[0].settings.link
                                                    else
                                                        assign text = array_marquee[1].settings.text
                                                        assign link = array_marquee[1].settings.link
                                                    endif
                                                -%}
                                                {%- if text != blank -%}
                                                    <{% if link != blank %}a{% else %}span{% endif %} class="banner-marquee__item{% if link != blank %} link{% endif %}"{% if link != blank %} href="{{ link }}"{% endif %}>
                                                        {{ text }}
                                                    </{% if link != blank %}a{% else %}span{% endif %}>
                                                {%- endif -%}
                                            {%- endfor -%}
                                        {% when 4 %}
                                            {%- for i in (1..10) -%}
                                                {%- liquid
                                                    assign number = forloop.index | modulo : 4
                                                    if number == 0
                                                        assign text = array_marquee[3].settings.text
                                                        assign link = array_marquee[3].settings.link
                                                    elsif number == 1
                                                        assign text = array_marquee[0].settings.text
                                                        assign link = array_marquee[0].settings.link
                                                    elsif number == 2
                                                        assign text = array_marquee[1].settings.text
                                                        assign link = array_marquee[1].settings.link
                                                    else
                                                        assign text = array_marquee[2].settings.text
                                                        assign link = array_marquee[2].settings.link
                                                    endif
                                                -%}
                                                {%- if text != blank -%}
                                                    <{% if link != blank %}a{% else %}span{% endif %} class="banner-marquee__item{% if link != blank %} link{% endif %}"{% if link != blank %} href="{{ link }}"{% endif %}>
                                                        {{ text }}
                                                    </{% if link != blank %}a{% else %}span{% endif %}>
                                                {%- endif -%}
                                            {%- endfor -%}
                                        {% when 5 %}
                                            {%- for i in (1..10) -%}
                                                {%- liquid
                                                    assign number = forloop.index | modulo : 5
                                                    if number == 0
                                                        assign text = array_marquee[4].settings.text
                                                        assign link = array_marquee[4].settings.link
                                                    elsif number == 1
                                                        assign text = array_marquee[0].settings.text
                                                        assign link = array_marquee[0].settings.link
                                                    elsif number == 2
                                                        assign text = array_marquee[1].settings.text
                                                        assign link = array_marquee[1].settings.link
                                                    elsif number == 3
                                                        assign text = array_marquee[2].settings.text
                                                        assign link = array_marquee[2].settings.link
                                                    else
                                                        assign text = array_marquee[3].settings.text
                                                        assign link = array_marquee[3].settings.link
                                                    endif
                                                -%}
                                                {%- if text != blank -%}
                                                    <{% if link != blank %}a{% else %}span{% endif %} class="banner-marquee__item{% if link != blank %} link{% endif %}"{% if link != blank %} href="{{ link }}"{% endif %}>
                                                        {{ text }}
                                                    </{% if link != blank %}a{% else %}span{% endif %}>
                                                {%- endif -%}
                                            {%- endfor -%}
                                        {% endcase %}
                                    </div>
                                    <div class="banner-marquee">
                                        {% case array_marquee.size %}
                                        {% when 1 %}
                                            {%- for i in (1..10) -%}
                                                {%- liquid
                                                    assign text = array_marquee[0].settings.text
                                                    assign link = array_marquee[0].settings.link
                                                -%}
                                                {%- if text != blank -%}
                                                    <{% if link != blank %}a{% else %}span{% endif %} class="banner-marquee__item{% if link != blank %} link{% endif %}"{% if link != blank %} href="{{ link }}"{% endif %}>
                                                        {{ text }}
                                                    </{% if link != blank %}a{% else %}span{% endif %}>
                                                {%- endif -%}
                                            {%- endfor -%}
                                        {% when 2 %}
                                            {%- for i in (1..10) -%}
                                                {%- liquid
                                                    assign number = forloop.index | modulo : 2
                                                    if number == 0
                                                        assign text = array_marquee[1].settings.text
                                                        assign link = array_marquee[1].settings.link
                                                    else
                                                        assign text = array_marquee[0].settings.text
                                                        assign link = array_marquee[0].settings.link
                                                    endif
                                                -%}
                                                {%- if text != blank -%}
                                                    <{% if link != blank %}a{% else %}span{% endif %} class="banner-marquee__item{% if link != blank %} link{% endif %}"{% if link != blank %} href="{{ link }}"{% endif %}>
                                                        {{ text }}
                                                    </{% if link != blank %}a{% else %}span{% endif %}>
                                                {%- endif -%}
                                            {%- endfor -%}
                                        {% when 3 %}
                                            {%- for i in (1..10) -%}
                                                {%- liquid
                                                    assign number = forloop.index | modulo : 3
                                                    if number == 0
                                                        assign text = array_marquee[2].settings.text
                                                        assign link = array_marquee[2].settings.link
                                                    elsif number == 1
                                                        assign text = array_marquee[0].settings.text
                                                        assign link = array_marquee[0].settings.link
                                                    else
                                                        assign text = array_marquee[1].settings.text
                                                        assign link = array_marquee[1].settings.link
                                                    endif
                                                -%}
                                                {%- if text != blank -%}
                                                    <{% if link != blank %}a{% else %}span{% endif %} class="banner-marquee__item{% if link != blank %} link{% endif %}"{% if link != blank %} href="{{ link }}"{% endif %}>
                                                        {{ text }}
                                                    </{% if link != blank %}a{% else %}span{% endif %}>
                                                {%- endif -%}
                                            {%- endfor -%}
                                        {% when 4 %}
                                            {%- for i in (1..10) -%}
                                                {%- liquid
                                                    assign number = forloop.index | modulo : 4
                                                    if number == 0
                                                        assign text = array_marquee[3].settings.text
                                                        assign link = array_marquee[3].settings.link
                                                    elsif number == 1
                                                        assign text = array_marquee[0].settings.text
                                                        assign link = array_marquee[0].settings.link
                                                    elsif number == 2
                                                        assign text = array_marquee[1].settings.text
                                                        assign link = array_marquee[1].settings.link
                                                    else
                                                        assign text = array_marquee[2].settings.text
                                                        assign link = array_marquee[2].settings.link
                                                    endif
                                                -%}
                                                {%- if text != blank -%}
                                                    <{% if link != blank %}a{% else %}span{% endif %} class="banner-marquee__item{% if link != blank %} link{% endif %}"{% if link != blank %} href="{{ link }}"{% endif %}>
                                                        {{ text }}
                                                    </{% if link != blank %}a{% else %}span{% endif %}>
                                                {%- endif -%}
                                            {%- endfor -%}
                                        {% when 5 %}
                                            {%- for i in (1..10) -%}
                                                {%- liquid
                                                    assign number = forloop.index | modulo : 5
                                                    if number == 0
                                                        assign text = array_marquee[4].settings.text
                                                        assign link = array_marquee[4].settings.link
                                                    elsif number == 1
                                                        assign text = array_marquee[0].settings.text
                                                        assign link = array_marquee[0].settings.link
                                                    elsif number == 2
                                                        assign text = array_marquee[1].settings.text
                                                        assign link = array_marquee[1].settings.link
